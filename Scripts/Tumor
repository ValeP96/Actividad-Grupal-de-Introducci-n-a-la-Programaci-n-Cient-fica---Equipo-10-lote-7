# Script para analizar la distribuci贸n de la expresi贸n de genes comparados por los tres tipos de tumor que tiene el dataframe. 

genes <- names(df)[startsWith(names(df), "AQ")]

for (gen in genes) {
  boxplot <- df %>%
    ggplot(aes(x = tumor, y = .data[[gen]], fill = tumor)) +
    geom_boxplot() +
    scale_fill_manual(values = c("CM" = "lightcoral", "CCR" = "lightblue", "CP" = "lightgreen")) +
    labs(
      title = paste("Distribucion de la expresi贸n de", gen, "por tipo de tumor"),
      x = "Tipo de Tumor",
      y = "Nivel de Expresi贸n"
    ) +
    theme_classic() +
    theme(legend.position = "none")
  print(boxplot)
}
